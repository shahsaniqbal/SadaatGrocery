<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    tools:context=".ui.Fragments.UserBased.Customers.UnderAccountFragment.WalletFragmentCustomer">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wallets"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Spent"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textSize="36dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txv_total_spent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textSize="36dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs."
            android:fontFamily="sans-serif-black"
            android:gravity="center"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Based on Full Retail Prices - Delivered Orders Only)"
            android:gravity="center"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currently In Wallet"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textSize="38dp"
            android:layout_marginTop="32dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txv_in_wallet_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textSize="36dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Credits"
            android:fontFamily="sans-serif-black"
            android:gravity="center"/>

    </LinearLayout>

</ScrollView>