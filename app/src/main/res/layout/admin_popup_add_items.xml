    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edx_add_items_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listing_top_card_margin"
                android:hint="Title*"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edx_add_items_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/listing_top_card_margin"
                    android:layout_weight="1"
                    android:hint="Quantity*"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edx_add_items_unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/listing_top_card_margin"
                    android:layout_weight="1"
                    android:hint="Unit*"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listing_top_card_margin"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Category*"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/admin_items_category_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listing_top_card_margin"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Sub-Category*"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/admin_items_subcategory_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edx_add_items_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listing_top_card_margin"
                android:hint="Description"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edx_add_items_retail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/listing_top_card_margin"
                    android:layout_weight="1"
                    android:hint="Retail*"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edx_add_items_sale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/listing_top_card_margin"
                    android:layout_weight="1"
                    android:hint="Sale Price*"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edx_add_items_security"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/listing_top_card_margin"
                    android:layout_weight="1"
                    android:hint="Security*"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:textColor="@color/black" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edx_add_items_extra_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/listing_top_card_margin"
                    android:layout_weight="1"
                    android:hint="Card Disc*"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edx_add_items_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listing_top_card_margin"
                android:hint="Initial Stock*"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textSize="12sp"
                android:textColor="@color/black" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edx_add_items_max_qty_per_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listing_top_card_margin"
                android:hint="Max Qty Per Order (Default 25)"
                android:textSize="12sp"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_weight="0.5"
        android:padding="16dp"
        android:gravity="center">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/addItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        app:cornerRadius="10dp"/>

    </LinearLayout>

    </LinearLayout>

</ScrollView>