<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp">

    <!--Name \n Unit - UnitPrice - Qty - Discounted Price-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="10"
        android:background="@drawable/grey_border">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"

            android:background="@drawable/grey_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/customer_item_cart_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:paddingHorizontal="4dp"

                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/customer_item_cart_unit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Unit"
                    android:fontFamily="monospace"
                    android:paddingHorizontal="4dp"
                    android:textSize="11sp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:orientation="vertical"

            android:background="@drawable/grey_border">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/customer_item_cart_unit_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="100.00"
                android:padding="4dp"
                android:fontFamily="monospace"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"

            android:background="@drawable/grey_border">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/customer_item_cart_qty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="2"
                android:padding="4dp"
                android:fontFamily="monospace"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:orientation="vertical"

            android:background="@drawable/grey_border">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/customer_item_cart_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="200.00"
                android:padding="4dp"
                android:fontFamily="monospace"/>

        </LinearLayout>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>