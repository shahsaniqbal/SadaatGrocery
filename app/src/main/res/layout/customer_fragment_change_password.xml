<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.UserBased.Customers.UnderSettingsFragment.PasswordChangeFragmentCustomer">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_your_password"
        android:textColor="@color/scarlet_red_700"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginVertical="16dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">


            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@android:drawable/ic_lock_lock"
                android:layout_margin="24dp"/>



            <com.google.android.material.textfield.TextInputEditText
                android:gravity="center_vertical"
                android:id="@+id/oldPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Old Password"
                android:paddingHorizontal="8dp"
                android:backgroundTint="#FFD693"
                android:textColor="@color/black"
                android:inputType="textLongMessage"
                android:layout_marginBottom="8dp"
                android:maxLength="16"/>

            <com.google.android.material.textfield.TextInputEditText
                android:gravity="center_vertical"
                android:id="@+id/newPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:paddingHorizontal="8dp"
                android:backgroundTint="#FFD693"
                android:maxLength="16"
                android:textColor="@color/black"/>

            <com.google.android.material.textfield.TextInputEditText
                android:gravity="center_vertical"
                android:id="@+id/newPassConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm New Password"
                android:paddingHorizontal="8dp"
                android:backgroundTint="#FFD693"
                android:maxLength="16"
                android:textColor="@color/black"/>



            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginVertical="16dp"
                android:id="@+id/btn_update"/>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/coordinator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</FrameLayout>