<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="136dp"
        android:layout_margin="8dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/customer_subcategory_parent_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">


            <!--Section 1: Showing Subcategory name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txv_subcategory_title_customer_category"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:text="Households"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    />

            </LinearLayout>

            <!--Section 2: Showing Subcategory Image-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/imgv_subcategory_image_customer_category"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/grocery_items"/>

            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>