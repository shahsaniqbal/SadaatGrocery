<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/listing_top_card_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edx_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/listing_top_card_margin"
            android:hint="Title"
            android:maxLength="16"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_add_slide_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:clickable="true"
            android:focusable="true"
            android:contextClickable="true"
            android:focusableInTouchMode="true"
            android:layout_gravity="center"
            app:cardElevation="4dp"
            android:layout_margin="8dp"
            >

            <ImageView
                android:id="@+id/iv_add_slide_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_camera"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edx_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/listing_top_card_margin"
            android:hint="Description"
            android:maxLength="60"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addSlide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="Add Slide"
        app:cornerRadius="10dp"
        android:padding="16dp"/>

</LinearLayout>